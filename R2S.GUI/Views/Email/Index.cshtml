</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            
            <div id="right-search" class="row">
                <form class="col s12">
                    <div class="input-field">
                        <i  class="mdi-action-search prefix"></i>
                         @Html.TextBox("search")
                       
                        
                    </div>
                </form>
            </div>
        </tr>
    </table>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
